  "envMode": "loose",
  "globalEnv": ["DATABASE_URL"],
  "tasks": {
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**"] },
    "dev": { "cache": false },
    "test": { "dependsOn": ["^build"], "outputs": [], "cache": false },
    "migrate": {
      "dependsOn": [],
      "outputs": []
    },
    "generate": {
      "dependsOn": [],
      "outputs": []
    }
  }
}
